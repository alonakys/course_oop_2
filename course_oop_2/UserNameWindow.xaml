        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:course_oop_2"
        mc:Ignorable="d"
        Title="UserName" Height="200" Width="318" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button Content="Confirm" HorizontalAlignment="Left" Height="37" Margin="192,92,0,0" VerticalAlignment="Top" Width="99" Click="Button_Click"/>
        <Label Content="Enter the player's name:" HorizontalAlignment="Left" Margin="13,10,0,0" VerticalAlignment="Top" Width="226"/>
        <TextBox HorizontalAlignment="Left" Margin="17,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" Height="24" TextChanged="TextBox_TextChanged" PreviewTextInput="TextBox_LimitTextInput"/>

    </Grid>
</Window>
